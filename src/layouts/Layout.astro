---
import Header from "../components/Header.astro";
import BlurCircle from "@/components/shared/BlurCircle.astro";
import theme from "@/data/theme";
import SEOTags from "@/components/seo/SEOTags.astro";
import type { HeadTags } from "@/utils/types/HeadTags";

import "@/styles/tailwind.css";
import "@/styles/post.css";
import "@/styles/global.css";

import ScrollSpy from "@preline/scrollspy";
import CTA from "@/components/CTA.astro";
import Footer from "@/components/Footer.astro";

// import "@fontsource-variable/syne";

export type Props = HeadTags;

const headTags = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <SEOTags {...headTags} />
    <body class="font-syne bg-neutral-950 text-neutral-400">
        <div
            class="mx-auto flex min-h-screen max-w-[1440px] flex-col gap-9 bg-neutral-950 px-10 py-8 text-sm md:gap-20 md:py-16"
        >
            <Header />
            <slot />
        </div>
        <CTA />
        <Footer />
    </body>
</html>
