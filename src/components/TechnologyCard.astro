---
import type { Tech } from "@/data/technologies";

type Props = {
    tech: Tech;
};

const { tech } = Astro.props;
---

<div
    class="card-bg flex flex-col sm:flex-row items-center justify-start rounded-lg p-4 backdrop-blur-md gap-12"
>
    <img src={tech.logo} alt={tech.title} />
    <span class="text-2xl font-bold text-secondary text-center">
        {tech.title}
    </span>
</div>
